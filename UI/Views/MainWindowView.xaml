<adonisControls:AdonisWindow 
    x:Class="vFalcon.UI.Views.MainWindowView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:vFalcon.UI.Views"
    xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
    xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
    xmlns:adonisExtensions="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI"
    xmlns:controls="clr-namespace:vFalcon.UI.Views.Controls"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    IconVisibility="Collapsed"
    FontFamily="Consolas" FontSize="12"
    TitleBarBackground="#101010"
    WindowButtonHighlightBrush="#353535"
    Width="1280" Height="900">
    <adonisControls:AdonisWindow.InputBindings>
        <KeyBinding Key="Esc" Command="{Binding ClearCommand}"/>
        <KeyBinding Key="F" Modifiers="Alt" Command="{Binding ToggleFullscreenCommand}"/>
        <KeyBinding Key="T" Modifiers="Alt" Command="{Binding ToggleTitleBarCommand}"/>
        <KeyBinding Key="B" Modifiers="Alt" Command="{Binding ToggleResizeBorderCommand}"/>
        <KeyBinding Key="R" Modifiers="Alt" Command="{Binding ToggleRecordingCommand}"/>
        <KeyBinding Key="S" Modifiers="Alt+Shift" Command="{Binding CaptureScreenCommand}"/>
        <KeyBinding Key="B" Modifiers="Ctrl" Command="{Binding ToggleToolBarCommand}"/>
        <KeyBinding Key="L" Modifiers="Ctrl" Command="{Binding LoadRecordingCommand}"/>
        <KeyBinding Key="E" Modifiers="Ctrl" Command="{Binding ExitRecordingCommand}"/>
        <KeyBinding Key="T" Modifiers="Ctrl" Command="{Binding ToggleTopDownCommand}"/>
        <KeyBinding Key="S" Modifiers="Ctrl" Command="{Binding SaveProfileCommand}"/>
        <KeyBinding Key="S" Modifiers="Ctrl+Shift" Command="{Binding SaveProfileAsCommand}"/>
        <KeyBinding Key="P" Modifiers="Ctrl+Shift" Command="{Binding SwitchProfileCommand}"/>
        <KeyBinding Key="G" Modifiers="Ctrl" Command="{Binding OpenGeneralSettingsCommand}"/>
        <KeyBinding Key="A" Modifiers="Ctrl" Command="{Binding OpenAppearanceSettingsCommand}"/>
        <KeyBinding Key="M" Modifiers="Ctrl" Command="{Binding OpenMapsCommand}"/>
        <KeyBinding Key="P" Modifiers="Ctrl" Command="{Binding OpenPositionsCommand}"/>
        <KeyBinding Key="F" Modifiers="Ctrl" Command="{Binding OpenFiltersCommand}"/>
        <KeyBinding Key="F" Modifiers="Shift" Command="{Binding OpenFindCommand}"/>
        <KeyBinding Key="Left" Command="{Binding RewindCommand}"/>
        <KeyBinding Key="Right" Command="{Binding FastForwardCommand}"/>
        <KeyBinding Key="Space" Command="{Binding PlayPauseCommand}"/>
        <KeyBinding Key="PageUp" Command="{Binding IncreaseVelocityVectorCommand}"/>
        <KeyBinding Key="PageDown" Command="{Binding DecreaseVelocityVectorCommand}"/>
    </adonisControls:AdonisWindow.InputBindings>
    <adonisControls:AdonisWindow.TitleBarContent>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="-8,0,0,0">
            <TextBlock
                Margin="10,0,5,0"
                VerticalAlignment="Center"
                Text="{Binding Title}">
            </TextBlock>
            <TextBlock
                Margin="5,0,0,0"
                VerticalAlignment="Center"
                Text="Last Updated:">
            </TextBlock>
            <TextBlock
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Foreground="{StaticResource Yellow}"
                Text="{Binding LastDataFeedUpdate}">
            </TextBlock>
            <TextBlock
                Margin="5,0,5,0"
                VerticalAlignment="Center"
                Foreground="#ff5664"
                Text="{Binding RecordingDuration}">
            </TextBlock>
        </StackPanel>
    </adonisControls:AdonisWindow.TitleBarContent>
    <Border>
        <Grid>
            <controls:DisplayControlView x:Name="DisplayControlView"/>
            <Border Visibility="{Binding DisplayVisibility}">
                <Grid>
                    <controls:ToolbarView x:Name="ToolbarView" VerticalAlignment="Top"/>
                </Grid>
            </Border>
            <Border Visibility="{Binding ReplayControlVisibility}">
                <Grid>
                    <controls:ReplayControlsView x:Name="ReplayControlsView" VerticalAlignment="Bottom" HorizontalAlignment="Stretch"/>
                </Grid>
            </Border>
            <Label
                Content="{Binding DisplayStatus}"
                Foreground="Red"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                FontFamily="/Resources/Fonts/Retro.ttf#Retro Regular"
                FontSize="32"/>
            <Label
                Content="{Binding MouseCoordinates, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Foreground="White"
                Margin="0,50,50,0"
                HorizontalAlignment="Right" VerticalAlignment="Top"
                FontFamily="/Resources/Fonts/Retro.ttf#Retro Regular"
                FontSize="16"/>
            <Popup
                x:Name="PilotContextPopup"
                IsOpen="False"
                StaysOpen="True"
                Placement="Relative">
                <controls:PilotContextView x:Name="PilotContextView"/>
            </Popup>
        </Grid>
    </Border>
</adonisControls:AdonisWindow>
