<adonisControls:AdonisWindow 
    x:Class="vFalcon.UI.Views.Common.NewProfileView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:vFalcon.UI.Views.Common"
    xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
    xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
    xmlns:adonisExtensions="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI"
    IconVisibility="Collapsed"
    Title="New Profile"
    Height="Auto" Width="300"
    SizeToContent="Height"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    FontFamily="Consolas" FontSize="12"
    BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
    <adonisControls:AdonisWindow.InputBindings>
        <KeyBinding
            Key="Enter"
            Command="{Binding CreateProfileCommand}"/>
        <KeyBinding
            Key="Esc"
            Command="{Binding CancelCommand}"/>
    </adonisControls:AdonisWindow.InputBindings>
    <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <TextBlock
                    Margin="10,5,10,0"
                    FontWeight="Bold"
                    Text="ARTCC:"/>
                <ComboBox
                    x:Name="ARTCC"
                    Margin="10,5,10,0"
                    ItemsSource="{Binding InstalledArtccs, UpdateSourceTrigger=PropertyChanged}"
                    SelectedValue="{Binding SelectedArtcc, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                </ComboBox>
                <TextBlock
                    Margin="10,5,10,0"
                    FontWeight="Bold"
                    IsEnabled="{Binding IsProfileNameable, UpdateSourceTrigger=PropertyChanged}"
                    Text="Profile Name:"/>
                <TextBox
                    x:Name="ProfileNameTextbox"
                    Margin="10,5,10,0"
                    IsEnabled="{Binding IsProfileNameable, UpdateSourceTrigger=PropertyChanged}"
                    Text="{Binding ProfileName, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button
                    Margin="0,10,0,10"
                    IsEnabled="{Binding IsProfileCreatable}"
                    Content="Create Profile"
                    Height="24"
                    BorderBrush="{DynamicResource {x:Static adonisUi:Brushes.AccentBrush}}"
                    Command="{Binding CreateProfileCommand}"/>
                <Button
                    Margin="5,10,10,10"
                    Content="Cancel"
                    Height="24"
                    Command="{Binding CancelCommand}"/>
            </StackPanel>
        </Grid>
    </Border>
</adonisControls:AdonisWindow>
