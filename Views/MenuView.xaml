<UserControl
    x:Class="vFalcon.Views.MenuView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:vFalcon.Views"
    mc:Ignorable="d" 
    Width="275" Height="Auto">
    <StackPanel>
        <Button
             Name="ActivateSectorButton"
             FontFamily="Consolas" FontSize="12"
             Height="26"
             HorizontalContentAlignment="Stretch"
             BorderBrush="#3d3d4c">
            <Button.Content>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock
                         x:Name="ActivateSectorTextBlock1"
                         Text="Activate Sector"
                         Grid.Column="0"
                         FontFamily="Consolas"
                         FontSize="12"
                         VerticalAlignment="Center"
                         Padding="10,0,0,0"/>
                    <TextBlock
                         x:Name="ActivateSectorTextBlock2"
                         Text="LCtrl+A"
                         Grid.Column="1"
                         FontFamily="Consolas"
                         FontSize="12"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Right"
                         Padding="0,0,10,0"/>
                </Grid>
            </Button.Content>
        </Button>
        <Button 
            Name="LoadReplayButton"
            FontFamily="Consolas" FontSize="12"
            Height="26"
            HorizontalContentAlignment="Stretch"
            BorderBrush="#3d3d4c">
            <Button.Content>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock
                         Text="Load Replay"
                         Grid.Column="0"
                         FontFamily="Consolas"
                         FontSize="12"
                         VerticalAlignment="Center"
                         Padding="10,0,0,0"/>
                    <TextBlock
                         Text="LCtrl+L"
                         Grid.Column="1"
                         FontFamily="Consolas"
                         FontSize="12"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Right"
                         Padding="0,0,10,0"/>
                </Grid>
            </Button.Content>
        </Button>
        <Button 
            Name="StartReplayButton"
            FontFamily="Consolas" FontSize="12"
            Height="26"
            HorizontalContentAlignment="Stretch"
            BorderBrush="#3d3d4c">
            <Button.Content>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock
                         Text="Start Replay"
                         Grid.Column="0"
                         FontFamily="Consolas"
                         FontSize="12"
                         VerticalAlignment="Center"
                         Padding="10,0,0,0"/>
                    <TextBlock
                         Text="LCtrl+R"
                         Grid.Column="1"
                         FontFamily="Consolas"
                         FontSize="12"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Right"
                         Padding="0,0,10,0"/>
                </Grid>
            </Button.Content>
        </Button>
        <Button
            Name="StopReplayButton"
            FontFamily="Consolas" FontSize="12"
            Height="26"
            HorizontalContentAlignment="Stretch"
            BorderBrush="#3d3d4c">
            <Button.Content>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock
                         Text="Stop Replay"
                         Grid.Column="0"
                         FontFamily="Consolas"
                         FontSize="12"
                         VerticalAlignment="Center"
                         Padding="10,0,0,0"/>
                    <TextBlock
                         Text="LCtrl+S"
                         Grid.Column="1"
                         FontFamily="Consolas"
                         FontSize="12"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Right"
                         Padding="0,0,10,0"/>
                </Grid>
            </Button.Content>
        </Button>
        <Button
            Name="StartRecordingButton"
            FontFamily="Consolas" FontSize="12"
            Height="26"
            HorizontalContentAlignment="Stretch"
            BorderBrush="#3d3d4c">
            <Button.Content>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock
                         Text="Start Recording"
                         Grid.Column="0"
                         FontFamily="Consolas"
                         FontSize="12"
                         VerticalAlignment="Center"
                         Padding="10,0,0,0"/>
                    <TextBlock
                         Text="LCtrl+LShft+R"
                         Grid.Column="1"
                         FontFamily="Consolas"
                         FontSize="12"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Right"
                         Padding="0,0,10,0"/>
                </Grid>
            </Button.Content>
        </Button>
        <Button 
            Name="StopRecordingButton"
            FontFamily="Consolas" FontSize="12"
            Height="26"
            HorizontalContentAlignment="Stretch"
            BorderBrush="#3d3d4c">
            <Button.Content>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock
                         Text="Stop Recording"
                         Grid.Column="0"
                         FontFamily="Consolas"
                         FontSize="12"
                         VerticalAlignment="Center"
                         Padding="10,0,0,0"/>
                    <TextBlock
                         Text="LCtrl+LShft+S"
                         Grid.Column="1"
                         FontFamily="Consolas"
                         FontSize="12"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Right"
                         Padding="0,0,10,0"/>
                </Grid>
            </Button.Content>
        </Button>
        <Button
            Name="SwitchProfileButton"
            FontFamily="Consolas" FontSize="12"
            Height="26"
            HorizontalContentAlignment="Stretch"
            BorderBrush="#3d3d4c"
            Click="SwitchProfileButtonClick">
            <Button.Content>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock
                         Text="Switch Profile"
                         Grid.Column="0"
                         FontFamily="Consolas"
                         FontSize="12"
                         VerticalAlignment="Center"
                         Padding="10,0,0,0"/>
                    <TextBlock
                         Text="LCtrl+LShft+P"
                         Grid.Column="1"
                         FontFamily="Consolas"
                         FontSize="12"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Right"
                         Padding="0,0,10,0"/>
                </Grid>
            </Button.Content>
        </Button>
        <Button
            Name="GeneralSettingsButton"
            FontFamily="Consolas" FontSize="12"
            Height="26"
            HorizontalContentAlignment="Stretch"
            BorderBrush="#3d3d4c"
            Click="GeneralSettingsButtonClick">
            <Button.Content>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock
                         Text="General Settings"
                         Grid.Column="0"
                         FontFamily="Consolas"
                         FontSize="12"
                         VerticalAlignment="Center"
                         Padding="10,0,0,0"/>
                    <TextBlock
                         Text="LCtrl+G"
                         Grid.Column="1"
                         FontFamily="Consolas"
                         FontSize="12"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Right"
                         Padding="0,0,10,0"/>
                </Grid>
            </Button.Content>
        </Button>
    </StackPanel>
</UserControl>
