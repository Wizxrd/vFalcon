<UserControl
    x:Class="vFalcon.Views.MenuView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:vFalcon.Views"
    mc:Ignorable="d" 
    FontFamily="Consolas" FontSize="12"
    Width="275" Height="Auto">
    <StackPanel>
        <Button
            Name="ActivateSectorButton"
            Height="26"
            HorizontalContentAlignment="Stretch"
            BorderBrush="#3d3d4c"
            Click="ActivateSectorButtonClick">
            <Button.Content>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock
                         Text="{Binding ActivateSectorText}"
                         Grid.Column="0"
                         VerticalAlignment="Center"
                         Padding="10,0,0,0"/>
                    <TextBlock
                         x:Name="ActivateSectorTextBlock2"
                         Text="Ctrl+F12"
                         Grid.Column="1"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Right"
                         Padding="0,0,10,0"/>
                </Grid>
            </Button.Content>
        </Button>
        <Button 
            Name="LoadReplayButton"
            Height="26"
            HorizontalContentAlignment="Stretch"
            BorderBrush="#3d3d4c"
            Click="LoadReplayButtonClick">
            <Button.Content>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock
                         Text="Load Replay"
                         Grid.Column="0"
                         VerticalAlignment="Center"
                         Padding="10,0,0,0"/>
                    <TextBlock
                         Text="Ctrl+L"
                         Grid.Column="1"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Right"
                         Padding="0,0,10,0"/>
                </Grid>
            </Button.Content>
        </Button>
        <Button 
            Name="StartReplayButton"
            Height="26"
            HorizontalContentAlignment="Stretch"
            BorderBrush="#3d3d4c">
            <Button.Content>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock
                         Text="Start Replay"
                         Grid.Column="0"
                         VerticalAlignment="Center"
                         Padding="10,0,0,0"/>
                    <TextBlock
                         Text="Ctrl+R"
                         Grid.Column="1"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Right"
                         Padding="0,0,10,0"/>
                </Grid>
            </Button.Content>
        </Button>
        <Button
            Name="StopReplayButton"
            Height="26"
            HorizontalContentAlignment="Stretch"
            BorderBrush="#3d3d4c">
            <Button.Content>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock
                         Text="Stop Replay"
                         Grid.Column="0"
                         VerticalAlignment="Center"
                         Padding="10,0,0,0"/>
                    <TextBlock
                         Text="Ctrl+S"
                         Grid.Column="1"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Right"
                         Padding="0,0,10,0"/>
                </Grid>
            </Button.Content>
        </Button>
        <Button
            Name="StartRecordingButton"
            Height="26"
            HorizontalContentAlignment="Stretch"
            BorderBrush="#3d3d4c"
            Click="StartRecordingButtonClick">
            <Button.Content>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Name="StartRecordingName"
                         Text="Start Recording"
                         Grid.Column="0"
                         VerticalAlignment="Center"
                         Padding="10,0,0,0"/>
                    <TextBlock
                         Name="StartRecordingKeybind"
                         Text="Ctrl+Shift+R"
                         Grid.Column="1"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Right"
                         Padding="0,0,10,0"/>
                </Grid>
            </Button.Content>
        </Button>
        <Button
            Name="SwitchProfileButton"
            Height="26"
            HorizontalContentAlignment="Stretch"
            BorderBrush="#3d3d4c"
            Click="SwitchProfileButtonClick">
            <Button.Content>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock
                         Text="Switch Profile"
                         Grid.Column="0"
                         VerticalAlignment="Center"
                         Padding="10,0,0,0"/>
                    <TextBlock
                         Text="Ctrl+Shift+P"
                         Grid.Column="1"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Right"
                         Padding="0,0,10,0"/>
                </Grid>
            </Button.Content>
        </Button>
        <Button
            Name="GeneralSettingsButton"
            Height="26"
            HorizontalContentAlignment="Stretch"
            BorderBrush="#3d3d4c"
            Click="GeneralSettingsButtonClick">
            <Button.Content>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Text="General Settings"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Padding="10,0,0,0"/>
                    <TextBlock
                         Text="Ctrl+G"
                         Grid.Column="1"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Right"
                         Padding="0,0,10,0"/>
                </Grid>
            </Button.Content>
        </Button>
    </StackPanel>
</UserControl>
