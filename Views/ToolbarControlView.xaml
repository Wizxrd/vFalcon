<UserControl x:Class="vFalcon.Views.ToolbarControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:vFalcon.Views"
             mc:Ignorable="d"
             Width="Auto" Height="Auto">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="0"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Top">
            <Button Style="{StaticResource TearoffButton}"/>
            <ToggleButton
                    x:Name="ToolbarBackButton"
                    Content="TOOLBAR"
                    Style="{StaticResource ToolbarButton}"/>
        </StackPanel>
        <Border Grid.Column="2" Background="#896800" Padding="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="2"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="0"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="2"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="2"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="2"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="2"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="2"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal">
                    <Button Style="{StaticResource TearoffButton}"/>
                    <ToggleButton
        x:Name="ToolbarMasterToolbarButton"
        Background="{StaticResource DeactivatedToggleButtonBackground}"
        Style="{StaticResource ToolbarToggleButton}">
                        <TextBlock TextAlignment="Center">
            <Run Text="MASTER"/>
            <LineBreak/>
            <Run Text="TOOLBAR"/>
                        </TextBlock>
                    </ToggleButton>
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="4" Orientation="Horizontal">
                    <Button Style="{StaticResource TearoffButton}"/>
                    <ToggleButton
        Background="{StaticResource DeactivatedToggleButtonBackground}"
        Style="{StaticResource ToolbarToggleButton}">
                        <TextBlock TextAlignment="Center">
            <Run Text="MCA"/>
            <LineBreak/>
            <Run Text="TOOLBAR"/>
                        </TextBlock>
                    </ToggleButton>
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="6" Orientation="Horizontal">
                    <Button Style="{StaticResource TearoffButton}"/>
                    <ToggleButton
        Background="{StaticResource DeactivatedToggleButtonBackground}"
        Style="{StaticResource ToolbarToggleButton}">
                        <TextBlock TextAlignment="Center">
            <Run Text="HORIZ"/>
            <LineBreak/>
            <Run Text="TOOLBAR"/>
                        </TextBlock>
                    </ToggleButton>
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="8" Orientation="Horizontal">
                    <Button Style="{StaticResource TearoffButton}"/>
                    <ToggleButton
        Background="{StaticResource DeactivatedToggleButtonBackground}"
        Style="{StaticResource ToolbarToggleButton}">
                        <TextBlock TextAlignment="Center">
            <Run Text="LEFT"/>
            <LineBreak/>
            <Run Text="TOOLBAR"/>
                        </TextBlock>
                    </ToggleButton>
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="10" Orientation="Horizontal">
                    <Button Style="{StaticResource TearoffButton}"/>
                    <ToggleButton
        Background="{StaticResource DeactivatedToggleButtonBackground}"
        Style="{StaticResource ToolbarToggleButton}">
                        <TextBlock TextAlignment="Center">
            <Run Text="RIGHT"/>
            <LineBreak/>
            <Run Text="TOOLBAR"/>
                        </TextBlock>
                    </ToggleButton>
                </StackPanel>
                <StackPanel Grid.Row="2" Grid.Column="2" Orientation="Horizontal">
                    <Button Style="{StaticResource TearoffButton}"/>
                    <ToggleButton
        Background="{StaticResource DeactivatedToggleButtonBackground}"
        Style="{StaticResource ToolbarToggleButton}">
                        <TextBlock TextAlignment="Center">
            <Run Text="MASTER"/>
            <LineBreak/>
            <Run Text="RAISE"/>
                        </TextBlock>
                    </ToggleButton>
                </StackPanel>
                <StackPanel Grid.Row="2" Grid.Column="4" Orientation="Horizontal">
                    <Button Style="{StaticResource TearoffButton}"/>
                    <ToggleButton
        Background="{StaticResource DeactivatedToggleButtonBackground}"
        Style="{StaticResource ToolbarToggleButton}">
                        <TextBlock TextAlignment="Center">
            <Run Text="MCA"/>
            <LineBreak/>
            <Run Text="RAISE"/>
                        </TextBlock>
                    </ToggleButton>
                </StackPanel>
                <StackPanel Grid.Row="2" Grid.Column="6" Orientation="Horizontal">
                    <Button Style="{StaticResource TearoffButton}"/>
                    <ToggleButton
        Background="{StaticResource DeactivatedToggleButtonBackground}"
        Style="{StaticResource ToolbarToggleButton}">
                        <TextBlock TextAlignment="Center">
            <Run Text="HORIZ"/>
            <LineBreak/>
            <Run Text="RAISE"/>
                        </TextBlock>
                    </ToggleButton>
                </StackPanel>
                <StackPanel Grid.Row="2" Grid.Column="8" Orientation="Horizontal">
                    <Button Style="{StaticResource TearoffButton}"/>
                    <ToggleButton
        Background="{StaticResource DeactivatedToggleButtonBackground}"
        Style="{StaticResource ToolbarToggleButton}">
                        <TextBlock TextAlignment="Center">
            <Run Text="LEFT"/>
            <LineBreak/>
            <Run Text="RAISE"/>
                        </TextBlock>
                    </ToggleButton>
                </StackPanel>
                <StackPanel Grid.Row="2" Grid.Column="10" Orientation="Horizontal">
                    <Button Style="{StaticResource TearoffButton}"/>
                    <ToggleButton
        Background="{StaticResource DeactivatedToggleButtonBackground}"
        Style="{StaticResource ToolbarToggleButton}">
                        <TextBlock TextAlignment="Center">
            <Run Text="RIGHT"/>
            <LineBreak/>
            <Run Text="RAISE"/>
                        </TextBlock>
                    </ToggleButton>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
