<UserControl x:Class="vFalcon.Views.ToolbarControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:vFalcon.Views"
             xmlns:controls="clr-namespace:vFalcon.Resources.Controls"
             mc:Ignorable="d"
             Width="Auto" Height="Auto">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <controls:EramButton
                Line1Text="TOOLBAR"
                EramButtonStyle="{StaticResource ToolbarButton}">
            </controls:EramButton>
            <controls:EramButton
                Line1Text="MASTER"
                Line2Text="TOOLBAR"
                EramButtonStyle="{StaticResource ToolbarToggleButton}">
            </controls:EramButton>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <controls:EramButton
                Line1Text="MASTER"
                Line2Text="RAISE"
                EramButtonStyle="{StaticResource ToolbarToggleButton}">
            </controls:EramButton>
        </StackPanel>
    </StackPanel>
</UserControl>
