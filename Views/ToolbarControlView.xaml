<UserControl x:Class="vFalcon.Views.ToolbarControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:vFalcon.Views"
             xmlns:controls="clr-namespace:vFalcon.Resources.Controls"
             mc:Ignorable="d"
             Width="Auto" Height="Auto">

    <Canvas>
        <controls:EramButton
            x:Name="ToolbarButton"
            Line1Text="TOOLBAR"
            EramButtonStyle="{StaticResource ToolbarButton}"
            Command="{Binding ToolbarControlCommand}"/>


        <StackPanel
            Visibility="{Binding ToolbarControlGrid}"
            Canvas.Left="96"
            Canvas.Top="0">

            <controls:EramButton
                Line1Text="MASTER"
                Line2Text="TOOLBAR"
                EramButtonStyle="{StaticResource ToolbarToggleButton}"
                Command="{Binding MasterToolbarCommand}"
                IsChecked="{Binding IsMasterToolbarOpen}" />

            <controls:EramButton
                Line1Text="MASTER"
                Line2Text="RAISE"
                EramButtonStyle="{StaticResource ToolbarToggleButton}" />
        </StackPanel>
    </Canvas>
</UserControl>