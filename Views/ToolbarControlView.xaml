<UserControl x:Class="vFalcon.Views.ToolbarControlView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:vFalcon.Views"
             xmlns:controls="clr-namespace:vFalcon.Resources.Controls"
             mc:Ignorable="d"
             Width="Auto" Height="Auto">
    <StackPanel Orientation="Horizontal">
        <!-- Left Column -->
        <StackPanel>
            <controls:EramButton
                Line1Text="TOOLBAR"
                EramButtonStyle="{StaticResource ToolbarButton}"
                Command="{Binding ToolbarControlCommand}"/>
        </StackPanel>

        <!-- Right Column using Grid for alignment -->
        <Grid Visibility="{Binding ToolbarControlGrid}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <controls:EramButton
                Grid.Row="0"
                Line1Text="MASTER"
                Line2Text="TOOLBAR"
                EramButtonStyle="{StaticResource ToolbarToggleButton}"
                Command="{Binding MasterToolbarCommand}"
                IsChecked="{Binding IsMasterToolbarOpen}"/>

            <controls:EramButton
                Grid.Row="1"
                Line1Text="MASTER"
                Line2Text="RAISE"
                EramButtonStyle="{StaticResource ToolbarToggleButton}" />
        </Grid>
    </StackPanel>
</UserControl>