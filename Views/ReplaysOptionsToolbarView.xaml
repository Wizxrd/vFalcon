<UserControl 
    x:Class="vFalcon.Views.ReplaysOptionsToolbarView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:vFalcon.Views"
    mc:Ignorable="d" 
    FontFamily="Consolas" FontSize="14"
    BorderBrush="{StaticResource PopupBorderBrush}" BorderThickness="1"
    Width="275" Height="Auto">
    <StackPanel>
        <Button 
            Name="LoadReplayButton"
            Height="32"
            HorizontalContentAlignment="Stretch"
            BorderBrush="#3d3d4c"
            Click="LoadReplayButtonClick">
            <Button.Content>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock
                         Text="Load Replay"
                         Grid.Column="0"
                         VerticalAlignment="Center"
                         Padding="10,0,0,0"/>
                    <TextBlock
                         Text="Ctrl+L"
                         Grid.Column="1"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Right"
                         Padding="0,0,10,0"/>
                </Grid>
            </Button.Content>
        </Button>
        <Button
            Name="ExitRecordingButton"
            IsEnabled="False"
            Height="32"
            HorizontalContentAlignment="Stretch"
            BorderBrush="#3d3d4c"
            Click="ExitRecordingButtonClick">
            <Button.Content>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock
                         Text="Exit Replay"
                         Grid.Column="0"
                         VerticalAlignment="Center"
                         Padding="10,0,0,0"/>
                    <TextBlock
                         Text="Ctrl+E"
                         Grid.Column="1"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Right"
                         Padding="0,0,10,0"/>
                </Grid>
            </Button.Content>
        </Button>
        <Button 
            Name="ReplaySettingsButton"
            Height="32"
            HorizontalContentAlignment="Stretch"
            BorderBrush="#3d3d4c">
            <Button.Content>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock
                         Text="Settings"
                         Grid.Column="0"
                         VerticalAlignment="Center"
                         Padding="10,0,0,0"/>
                </Grid>
            </Button.Content>
        </Button>
    </StackPanel>
</UserControl>
