<UserControl 
    x:Class="vFalcon.Views.PilotContextView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    xmlns:local="clr-namespace:vFalcon.Views"
    xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
    xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
    xmlns:adonisExtensions="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI"
    mc:Ignorable="d"
    FontFamily="Consolas"
    FontSize="12"
    Width="200"
    Height="Auto">

    <StackPanel 
        Background="#2a2b34"
        Orientation="Vertical"
        Grid.IsSharedSizeScope="True">
        <Border 
            Height="24"
            Background="Black"
            BorderBrush="#e4e400"
            BorderThickness="1">
            <TextBlock 
                Text="{Binding PilotCallsign}"
                Foreground="#e4e400"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"/>
        </Border>
        <Button 
            Command="{Binding DisplayRouteCommand}"
            Height="30"
            HorizontalContentAlignment="Center">
            <TextBlock
                Text="Display Route" Margin="0,0,0,0">
                
            </TextBlock>
        </Button>
        <Button 
            adonisExtensions:RippleExtension.BackgroundBrush="Transparent"
            adonisExtensions:RippleExtension.BorderBrush="Transparent"
            BorderBrush="#3d3d4c"
            Height="30">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition 
                        Width="Auto"/>
                    <ColumnDefinition 
                        Width="*" 
                        SharedSizeGroup="LabelCenter"/>
                    <ColumnDefinition 
                        Width="Auto"/>
                </Grid.ColumnDefinitions>
                <CheckBox 
                    Grid.Column="0"
                    Opacity="0"
                    IsHitTestVisible="False"
                    Margin="0,0,8,0"/>
                <TextBlock 
                    Grid.Column="1"
                    Text="FDB Position"
                    Foreground="White"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"/>
                <xctk:IntegerUpDown 
                    Grid.Column="2"
                    Foreground="White"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Value="{Binding FullDataBlockPosition}"
                    Minimum="1"
                    Maximum="9"
                    Increment="1"
                    VerticalAlignment="Center"
                    Margin="8,0,0,0"/>
            </Grid>
        </Button>
        <Button 
            adonisExtensions:RippleExtension.BackgroundBrush="Transparent"
            adonisExtensions:RippleExtension.BorderBrush="Transparent"
            BorderBrush="#3d3d4c"
            Height="30">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition 
                        Width="Auto"/>
                    <ColumnDefinition 
                        Width="*" 
                        SharedSizeGroup="LabelCenter"/>
                    <ColumnDefinition 
                        Width="Auto"/>
                </Grid.ColumnDefinitions>
                <CheckBox 
                    Grid.Column="0"
                    Opacity="0"
                    IsHitTestVisible="False"
                    Margin="0,0,8,0"/>
                <TextBlock 
                    Grid.Column="1"
                    Text="Leader Line"
                    Foreground="White"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"/>
                <xctk:IntegerUpDown 
                    Grid.Column="2"
                    Foreground="White"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Value="{Binding LeaderLineLength}"
                    Minimum="0"
                    Maximum="3"
                    Increment="1"
                    VerticalAlignment="Center"
                    Margin="8,0,0,0"/>
            </Grid>
        </Button>
        <Button 
            adonisExtensions:RippleExtension.BackgroundBrush="Transparent"
            adonisExtensions:RippleExtension.BorderBrush="Transparent"
            BorderBrush="#3d3d4c"
            Height="30">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition 
                        Width="Auto"/>
                    <ColumnDefinition 
                        Width="*" 
                        SharedSizeGroup="LabelCenter"/>
                    <ColumnDefinition 
                        Width="Auto"/>
                </Grid.ColumnDefinitions>
                <CheckBox 
                    Grid.Column="0"
                    Background="#272730"
                    IsChecked="{Binding JRingEnabled}"
                    VerticalAlignment="Center"
                    Margin="0,0,8,0"/>
                <TextBlock 
                    Grid.Column="1"
                    Text="J-Ring"
                    Foreground="White"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"/>
            </Grid>
        </Button>
    </StackPanel>
</UserControl>
