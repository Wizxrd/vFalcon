<UserControl x:Class="vFalcon.Views.MapsToolbarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:vFalcon.Views"
             xmlns:controls="clr-namespace:vFalcon.Resources.Controls"
             xmlns:converters="clr-namespace:vFalcon.Converters"
             mc:Ignorable="d" 
             Width="Auto" Height="75">
    <UserControl.Resources>
        <converters:BoolToCollapsedConverter x:Key="BoolToCollapsedConverter"/>
    </UserControl.Resources>
    <Border Background="{StaticResource MasterToolbarBackground}" BorderBrush="{StaticResource MasterToolbarBorder}" BorderThickness="1" Padding="3,1,0,0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="{StaticResource GridButtonWidth}"/>
                <ColumnDefinition Width="3"/>
                <ColumnDefinition Width="{StaticResource GridButtonWidth}"/>
                <ColumnDefinition Width="3"/>
                <ColumnDefinition Width="{StaticResource GridButtonWidth}"/>
                <ColumnDefinition Width="3"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <controls:EramButton
                Grid.Column="6"
                Margin="6,0,0,2"
                VerticalAlignment="Bottom"
                Line1Text="{Binding MapsLabelLine1}"
                Line2Text="{Binding MapsLabelLine2}"
                EramButtonStyle="{StaticResource MenuButtonOpen}"
                Command="{Binding MapsBackCommand}"/>
            <Border Grid.Column="8" BorderBrush="#896800" BorderThickness="2">
                <Grid>
                    <!-- Default Layout -->
                    <ItemsControl x:Name="DefaultLayout"
                      ItemsSource="{Binding MapFilters}"
                      Visibility="{Binding UseAlternateMapLayout, Converter={StaticResource BoolToCollapsedConverter}, ConverterParameter=True}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="3"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="3"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="3"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="3"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="3"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="3"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="3"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="3"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="3"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="3"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                </Grid>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemContainerStyle>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="Grid.Row" Value="{Binding Row}"/>
                                <Setter Property="Grid.Column" Value="{Binding Column}"/>
                            </Style>
                        </ItemsControl.ItemContainerStyle>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <controls:EramButton
                                    Line1Text="{Binding LabelLine1}"
                                    Line2Text="{Binding LabelLine2}"
                                    EramButtonStyle="{StaticResource ToggleButton}"
                                    Command="{Binding Command}"
                                    IsChecked="{Binding IsChecked}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <ItemsControl x:Name="AlternateLayout"
                      ItemsSource="{Binding MapFilters}"
                      Visibility="{Binding UseAlternateMapLayout, Converter={StaticResource BoolToCollapsedConverter}}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="3"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <!-- Only 10 columns in this layout -->
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="3"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="3"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="3"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="3"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="3"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="3"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="3"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="3"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="3"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                </Grid>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemContainerStyle>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="Grid.Row" Value="{Binding Row}"/>
                                <Setter Property="Grid.Column" Value="{Binding Column}"/>
                            </Style>
                        </ItemsControl.ItemContainerStyle>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <controls:EramButton
                                    Line1Text="{Binding LabelLine1}"
                                    Line2Text="{Binding LabelLine2}"
                                    EramButtonStyle="{StaticResource ToggleButton}"
                                    Command="{Binding Command}"
                                    IsChecked="{Binding IsChecked}"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </Border>

        </Grid>
    </Border>
</UserControl>
