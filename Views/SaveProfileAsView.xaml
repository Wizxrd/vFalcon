<adonisControls:AdonisWindow x:Class="vFalcon.Views.SaveProfileAsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
    xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
    xmlns:adonisExtensions="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI"
    xmlns:local="clr-namespace:vFalcon.Views"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    Title="Save Profile As"
    FontFamily="Consolas" FontSize="12"
    SizeToContent="Height"
    Height="Auto" Width="300"
    BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
    FocusManager.FocusedElement="{Binding ElementName=ARTCC}">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" CornerRadius="0" CaptionHeight="0"/>
    </WindowChrome.WindowChrome>
    <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0">
                <TextBlock
                    Margin="10,5,10,0"
                    FontWeight="Bold"
                    Text="Profile Name:"/>
                <TextBox
                    x:Name="ProfileNameTextbox"
                    Margin="10,5,10,0"
                    Text="{Binding ProfileName, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button
                    Margin="0,10,0,10"
                    IsEnabled="{Binding IsProfileSavable}"
                    Content="Save As"
                    Height="24"
                    BorderBrush="{DynamicResource {x:Static adonisUi:Brushes.AccentBrush}}"
                    Command="{Binding SaveAsCommand}"/>
                <Button
                    Margin="5,10,10,10"
                    Content="Cancel"
                    Height="24"
                    Command="{Binding CancelCommand}"/>
            </StackPanel>
        </Grid>
    </Border>
</adonisControls:AdonisWindow>
