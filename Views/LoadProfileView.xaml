<adonisControls:AdonisWindow
    x:Class="vFalcon.Views.LoadProfileView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:vFalcon"
    xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
    xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
    xmlns:adonisExtensions="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI"
    mc:Ignorable="d"
    Icon="pack://application:,,,/Resources/Images/vFalcon.png"
    Title="Load Profile"
    MinWidth="400" Width="400" Height="500"
    SizeToContent="Width" ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    FontFamily="Consolas" FontSize="12"
    Foreground="{StaticResource White}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
    <adonisControls:AdonisWindow.InputBindings>
        <KeyBinding
            Key="Esc"
            Command="{Binding StopRenamingCommand}"/>
        <KeyBinding
            Key="Enter"
            Command="{Binding StopRenamingCommand}"/>
    </adonisControls:AdonisWindow.InputBindings>
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" CornerRadius="0" CaptionHeight="0"/>
    </WindowChrome.WindowChrome>
    <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="300"/>
                <ColumnDefinition Width="*" MinWidth="100"/>
            </Grid.ColumnDefinitions>
            <TextBox
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Margin="10,5,10,0"
                adonisExtensions:WatermarkExtension.Watermark="Search..."
                Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}">
            </TextBox>
            <Border
                x:Name="SizedBorder"
                Grid.Row="1" Grid.Column="0"
                Margin="10,5,0,0"
                BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding FilteredProfiles}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ToggleButton
                                    Tag="{Binding}"
                                    IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                    Margin="5,2"
                                    Height="32"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Stretch"
                                    Command="{Binding DataContext.SelectProfileCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                    CommandParameter="{Binding}"
                                    Style="{StaticResource ProfileToggleButton}">
                                    <ToggleButton.Content>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <ContentControl Grid.Column="0" Content="{Binding}" Style="{DynamicResource RenameButtonControl}"/>
                                        </Grid>
                                    </ToggleButton.Content>
                                </ToggleButton>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Border>
            <StackPanel Grid.Row="1" Grid.Column="1" Margin="0,10,0,0">
                <StackPanel>
                    <Button
                        Margin="5,0,10,0"
                        Content="New"
                        Height="24"
                        Command="{Binding NewProfileCommand}"/>
                    <Button
                        Margin="5,5,10,10"
                        Height="24"
                        Content="Import"
                        Command="{Binding ImportProfileCommand}"/>
                </StackPanel>
                <StackPanel>
                    <Button
                        Margin="5,10,10,0"
                        Content="Load"
                        Height="24"
                        IsEnabled="{Binding IsProfileSelected}"
                        Command="{Binding LoadProfileCommand}"/>
                    <Button
                        Margin="5,5,10,0"
                        Content="Rename"
                        Height="24"
                        IsEnabled="{Binding IsProfileSelected}"
                        Command="{Binding DataContext.RenameProfileCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                        CommandParameter="{Binding}"/>
                    <Button
                        Margin="5,5,10,0"
                        Content="Copy"
                        Height="24"
                        IsEnabled="{Binding IsProfileSelected}"
                        Command="{Binding CopyProfileCommand}"/>
                    <Button
                        Margin="5,5,10,0"
                        Content="Export"
                        Height="24"
                        IsEnabled="{Binding IsProfileSelected}"
                        Command="{Binding ExportProfileCommand}"/>
                    <Button
                        Margin="5,5,10,0"
                        Content="Delete"
                        Height="24"
                        IsEnabled="{Binding IsProfileSelected}"
                        Command="{Binding DeleteProfileCommand}"/>
                </StackPanel>
            </StackPanel>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button
                    Grid.Column="0"
                    Height="24"
                    Margin="10,5,0,5"
                    Content="Manage ARTCCs"
                    Command="{Binding OpenManageArtccsCommand}"/>
            </Grid>
        </Grid>
    </Border>
</adonisControls:AdonisWindow>
