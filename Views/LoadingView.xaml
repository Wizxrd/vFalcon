<adonisControls:AdonisWindow 
    x:Class="vFalcon.Views.LoadingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:vFalcon.Views"
    xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
    xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
    xmlns:adonisExtensions="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI"
    mc:Ignorable="d"
    TitleVisibility="Collapsed"
    WindowStyle="None"
    ResizeMode="NoResize"
    IconVisibility="Collapsed"
    WindowStartupLocation="CenterScreen"
    FontFamily="Consolas"
    Background="Black"
    SizeToContent="Height"
    BorderBrush="{StaticResource BorderBrush}" BorderThickness="1"
    Width="720">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image
            Grid.Row="0"
            Grid.RowSpan="2"
            Source="/Resources/Images/ATC.jpg"
            Opacity="0.75"
            VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
        <TextBlock
            Name ="TextBlockTitle"
            Text="vFalcon"
            Grid.RowSpan="2"
            VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center"
            Foreground="White"
            FontWeight="Bold"
            FontSize="72">
        </TextBlock>
        <ContentControl
            Grid.Row="1"
            ContentTemplate="{DynamicResource {x:Static adonisUi:Templates.LoadingBars}}"
            Foreground="White"
            Width="24"
            Height="24"
            Margin="0,0,0,75"
            VerticalAlignment="Bottom" HorizontalAlignment="Center"
            Focusable="False"/>
        <TextBlock
            Name ="TextBlockLoading"
            Text="Initializing Nasr Data"
            Grid.Row="1"
            Margin="0,0,0,50"
            VerticalAlignment="Bottom" HorizontalAlignment="Center" TextAlignment="Center"
            Foreground="{DynamicResource White}"
            FontSize="18">
        </TextBlock>
    </Grid>
</adonisControls:AdonisWindow>
