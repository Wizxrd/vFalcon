<UserControl 
    x:Class="vFalcon.Views.RecordingOptionsToolbarView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:vFalcon.Views"
    mc:Ignorable="d" 
    FontFamily="Consolas" FontSize="14"
    BorderBrush="{StaticResource PopupBorderBrush}" BorderThickness="1"
    Width="275" Height="Auto">
    <StackPanel>
        <Button
        Name="StartRecordingButton"
        Height="32"
        HorizontalContentAlignment="Stretch"
        BorderBrush="#3d3d4c"
        Click="StartRecordingButtonClick">
            <Button.Content>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Name="StartRecordingName"
                        Text="Start Recording"
                        Grid.Column="0"
                        VerticalAlignment="Center"
                        Padding="10,0,0,0"/>
                    <TextBlock
                        Name="StartRecordingKeybind"
                        Text="Ctrl+Shift+R"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"
                        Padding="0,0,10,0"/>
                </Grid>
            </Button.Content>
        </Button>
    </StackPanel>
</UserControl>
