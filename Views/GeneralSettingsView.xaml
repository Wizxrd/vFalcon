<adonisControls:AdonisWindow 
    x:Class="vFalcon.Views.GeneralSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:vFalcon.Views"
    mc:Ignorable="d"
    xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
    xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
    xmlns:adonisExtensions="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI"
    Title="Settings"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    FontFamily="Consolas" FontSize="14"
    SizeToContent="Width"
    Width="Auto" Height="440"
    KeyDown="OnKeyDown"
    BorderBrush="{StaticResource BorderBrush}" BorderThickness="1">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" CornerRadius="0" CaptionHeight="0"/>
    </WindowChrome.WindowChrome>
    <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,1,0,0">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="5">
            <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="5" Width="250">
                <CheckBox 
                    Content="Record Audio" 
                    IsChecked="{Binding RecordAudio}" 
                    Margin="15,10,5,20"
                    Visibility="Collapsed">
                </CheckBox>
                <CheckBox 
                    Content="Top-down mode (Ctrl+T)" 
                    IsChecked="{Binding IsTopDownMode}" 
                    Margin="15,10,5,20">
                </CheckBox>
                <TextBlock
                    Visibility="{Binding StarsDisplay}"
                    Text="GeoMap Set:"
                    Margin="15,0,0,5">
                </TextBlock>
                <ComboBox 
                    Visibility="{Binding StarsDisplay}"
                    ItemsSource="{Binding GeoMapSets}"
                    SelectedItem="{Binding SelectedGeoMapSet}"
                    Margin="15,0,15,20"
                    MinHeight="25">
                </ComboBox>
                <TextBlock 
                    Text="Log Level:"
                    Margin="15,0,0,5">
                </TextBlock>
                <ComboBox
                    Margin="15,0,15,20"
                    SelectedIndex="{Binding SelectedLogLevel, UpdateSourceTrigger=PropertyChanged}"
                    MinHeight="25">
                    <ComboBoxItem Content="Alert"/>
                    <ComboBoxItem Content="Error"/>
                    <ComboBoxItem Content="Warning"/>
                    <ComboBoxItem Content="Info"/>
                    <ComboBoxItem Content="Debug"/>
                    <ComboBoxItem Content="Trace"/>
                </ComboBox>
                <Grid Height="32" IsEnabled="{Binding IsRecordAudioEnabled}" Visibility="Collapsed">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="PTT:" Margin="15,0,0,0" VerticalAlignment="Center"/>
                    <TextBlock Grid.Column="1" Text="{Binding PttButton}" Margin="5,0,0,0" FontWeight="Bold" VerticalAlignment="Center"/>
                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Set" Margin="5,0,0,0" Visibility="{Binding DefaultVisbility}" Command="{Binding SetPttCommand}"/>
                        <Button Content="Clear" Margin="5,0,15,0" IsEnabled="{Binding ClearButtonEnabled}" Visibility="{Binding DefaultVisbility}" Command="{Binding ClearPttCommand}"/>
                        <Button Content="Cancel" Margin="5,0,15,0" Visibility="{Binding CancelButtonVisibility}" Command="{Binding CancelPttScanCommand}"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
            <Border BorderBrush="{StaticResource BorderBrush}" BorderThickness="1,0,0,0"/>
            <StackPanel Width="250">
                <Label Content="Appearance Settings" FontSize="16" HorizontalAlignment="Center" FontWeight="Regular"/>
                <Label Content="Background" Margin="15,5,0,0" FontWeight="Regular"/>
                <Slider Margin="15,5,15,0" Minimum="0" Maximum="60" TickFrequency="2" IsSnapToTickEnabled="True" Value="{Binding BackgroundValue}"/>
                <Label Content="Backlight" Margin="15,5,0,0" FontWeight="Regular"/>
                <Slider Margin="15,5,15,0" Minimum="0" Maximum="100" TickFrequency="2" IsSnapToTickEnabled="True" Value="{Binding BrightnessValue}"/>
                <Label Content="Datablock Font Size" Margin="15,5,0,0" FontWeight="Regular"/>
                <Slider Margin="15,5,15,0" Minimum="8" Maximum="24" TickFrequency="2" IsSnapToTickEnabled="True" Value="{Binding DatablockTextSize}"/>
                <Label Content="Full Datablock Brightness" Margin="15,5,0,0" FontWeight="Regular"/>
                <Slider Margin="15,5,15,0" Minimum="0" Maximum="100" TickFrequency="1" IsSnapToTickEnabled="True" Value="{Binding FullDatablockBrightness}"/>
                <Label Content="Limited Datablock Brightness" Margin="15,5,5,0" FontWeight="Regular"/>
                <Slider Margin="15,5,15,0" Minimum="0" Maximum="100" TickFrequency="1" IsSnapToTickEnabled="True" Value="{Binding LimitedDatablockBrightness}"/>
                <Label Content="Map Brightness" Margin="15,5,0,0" FontWeight="Regular"/>
                <Slider Margin="15,5,15,0" Minimum="0" Maximum="100" TickFrequency="2" IsSnapToTickEnabled="True" Value="{Binding MapBrightness}"/>
                <Label Content="History Brightness" Margin="15,5,0,0" FontWeight="Regular"/>
                <Slider Margin="15,5,15,0" Minimum="0" Maximum="100" TickFrequency="1" IsSnapToTickEnabled="True" Value="{Binding HistoryBrightness}"/>
                <Label Content="History Length" Margin="15,5,0,0" FontWeight="Regular"/>
                <Slider Margin="15,5,15,0" Minimum="1" Maximum="6" TickFrequency="1" IsSnapToTickEnabled="True" Value="{Binding HistoryLength}"/>
                <Label Content="Vector Length (PgUp+PgDn)" Margin="15,5,0,0" FontWeight="Regular"/>
                <Slider Margin="15,5,15,10" Minimum="0" Maximum="5" TickFrequency="1" IsSnapToTickEnabled="True" Value="{Binding VectorLength}"/>
            </StackPanel>
        </StackPanel>
    </Border>
</adonisControls:AdonisWindow>
