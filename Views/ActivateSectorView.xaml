<adonisControls:AdonisWindow
    x:Class="vFalcon.Views.ActivateSectorView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:vFalcon"
    xmlns:adonisUi="clr-namespace:AdonisUI;assembly=AdonisUI"
    xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
    xmlns:adonisExtensions="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI"
    mc:Ignorable="d"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    FontFamily="Consolas" FontSize="12"
    IconVisibility="Collapsed"
    Title="Activate Sector"
    Width="300" SizeToContent="Height"
    BorderBrush="#44454a"
    BorderThickness="1">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0" CornerRadius="0" CaptionHeight="0"/>
    </WindowChrome.WindowChrome>
    <Border BorderThickness="0,1,0,0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                FontFamily="Consolas" FontWeight="Bold" FontSize="12"
                Margin="10,5,0,0"
                Text="Sector">
            </TextBlock>
            <ComboBox
                Name="SectorComboBox"
                Grid.Row="1"
                ItemsSource="{Binding ArtccOptions}"
                SelectedItem="{Binding SelectedSector}"
                Margin="10,5,10,0">
            </ComboBox>
            <Border Grid.Row="2" Margin="0,10,0,5" HorizontalAlignment="Right">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button
                        Grid.Column="0"
                        Name="ActivateButton"
                        Content="Activate"
                        Margin="5,0,2.5,0"
                        Height="25"
                        BorderBrush="#425595"
                        Command="{Binding ActivateCommand}">
                    </Button>
                    <Button
                        Grid.Column="1"
                        Name="CancelButton"
                        Content="Cancel"
                        Margin="2.5,0,5,0"
                        Height="25"
                        Command="{Binding CancelCommand}">
                    </Button>
                </Grid>
            </Border>
        </Grid>
    </Border>
</adonisControls:AdonisWindow>
