<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>Resources\Images\vFalcon.ico</ApplicationIcon>
    <Version>0.0.3</Version>
    <PackageLicenseFile>LICENSE.txt</PackageLicenseFile>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/Wizxrd/vFalcon</RepositoryUrl>
    <SignAssembly>False</SignAssembly>
    <DelaySign>False</DelaySign>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\Cursors\Eram1.cur" />
    <None Remove="Resources\Cursors\Eram2.cur" />
    <None Remove="Resources\Cursors\Eram3.cur" />
    <None Remove="Resources\Cursors\Eram4.cur" />
    <None Remove="Resources\Cursors\Eram5.cur" />
    <None Remove="Resources\Fonts\ERAMv200.ttf" />
    <None Remove="Resources\Fonts\ERAMv300.ttf" />
    <None Remove="Resources\Images\Copy.png" />
    <None Remove="Resources\Images\Delete.png" />
    <None Remove="Resources\Images\Export.png" />
    <None Remove="Resources\Images\QuestionBlue.png" />
    <None Remove="Resources\Images\Rename.png" />
    <None Remove="Resources\Images\vFalcon.ico" />
    <None Remove="Resources\Images\vFalcon.png" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Resources\Images\vFalcon.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="AdonisUI" Version="1.17.1" />
    <PackageReference Include="AdonisUI.ClassicTheme" Version="1.17.1" />
    <PackageReference Include="GeoJSON.Net" Version="1.4.1" />
    <PackageReference Include="Microsoft.Xaml.Behaviors.Wpf" Version="1.1.135" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="SkiaSharp" Version="3.119.0" />
    <PackageReference Include="SkiaSharp.Views.WPF" Version="3.119.0" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Resources\Cursors\Eram1.cur" />
    <Resource Include="Resources\Cursors\Eram2.cur" />
    <Resource Include="Resources\Cursors\Eram3.cur" />
    <Resource Include="Resources\Cursors\Eram4.cur" />
    <Resource Include="Resources\Cursors\Eram5.cur" />
    <Resource Include="Resources\Fonts\ERAMv200.ttf" />
    <Resource Include="Resources\Fonts\ERAMv300.ttf" />
    <Resource Include="Resources\Images\Copy.png" />
    <Resource Include="Resources\Images\Delete.png" />
    <Resource Include="Resources\Images\Export.png" />
    <Resource Include="Resources\Images\QuestionBlue.png" />
    <Resource Include="Resources\Images\Rename.png" />
    <Resource Include="Resources\Images\vFalcon.ico" />
    <Resource Include="Resources\Images\vFalcon.png" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Profiles\" />
  </ItemGroup>

  <ItemGroup>
    <None Update="LICENSE.txt">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Update="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
