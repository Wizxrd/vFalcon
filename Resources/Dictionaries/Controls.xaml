<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:adonisExtensions="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI">

    <Style x:Key="ProfileSubButtonHover" TargetType="Image">
        <Setter Property="Opacity" Value="0.5"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsMouseOver, RelativeSource={RelativeSource AncestorType=Button}}" Value="True">
                <Setter Property="Opacity" Value="1.0"/>
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect 
                        Color="White"
                        BlurRadius="2"
                        Opacity="0.2"
                        ShadowDepth="0"/>
                    </Setter.Value>
                </Setter>
            </DataTrigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="ProfileToggleButton" TargetType="ToggleButton">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="Foreground" Value="{StaticResource WhiteText}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Background" Value="#2a2b34"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Border
                    x:Name="Border"
                    Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="1">
                        <ContentPresenter
                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                        RecognizesAccessKey="True"/>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource ButtonBackground}"/>
                        </Trigger>

                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#2a2b34"/>
                            <Setter TargetName="Border" Property="BorderBrush" Value="#5c5f74"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="Transparent"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="RenameButtonControl" TargetType="ContentControl">
        <Setter Property="Foreground" Value="{DynamicResource TextColor}"/>
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="FontSize" Value="12"/>
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsRenaming}" Value="True">
                <Setter Property="ContentTemplate">
                    <Setter.Value>
                        <DataTemplate>
                            <TextBox
                                FontFamily="Consolas" FontSize="15" FontWeight="Bold"
                                Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                Tag="{Binding Text, RelativeSource={RelativeSource Self}}"
                                Background="#141420"
                                BorderBrush="Transparent"
                                adonisExtensions:CursorSpotlightExtension.BackgroundBrush="#141420"
                                adonisExtensions:CursorSpotlightExtension.BorderBrush="Transparent"
                                Foreground="{DynamicResource TextColor}"
                                BorderThickness="1"
                                VerticalAlignment="Center"
                                Margin="1,0,5,0"
                                Style="{DynamicResource TextBoxStyle}">
                                <TextBox.InputBindings>
                                    <KeyBinding
                                    Key="Enter"
                                    Command="{Binding DataContext.StopRenamingCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=TextBox}}"/>
                                </TextBox.InputBindings>
                            </TextBox>
                        </DataTemplate>
                    </Setter.Value>
                </Setter>
            </DataTrigger>
            <DataTrigger Binding="{Binding IsRenaming}" Value="False">
                <Setter Property="ContentTemplate">
                    <Setter.Value>
                        <DataTemplate>
                            <TextBlock
                                FontFamily="Consolas" FontSize="15" FontWeight="Bold"
                                Margin="9,0,0,0"
                                Text="{Binding Name}"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"/>
                        </DataTemplate>
                    </Setter.Value>
                </Setter>
            </DataTrigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>