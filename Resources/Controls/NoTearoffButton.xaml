<UserControl x:Class="vFalcon.Resources.Controls.NoTearoffButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:vFalcon.Resources.Controls"
             mc:Ignorable="d"
             Width="Auto" Height="Auto">
    <StackPanel 
        Grid.Row="{Binding (Grid.Row), RelativeSource={RelativeSource AncestorType=UserControl}}"
        Grid.Column="{Binding (Grid.Column), RelativeSource={RelativeSource AncestorType=UserControl}}"
        Orientation="Horizontal">
        <Button
            Style="{Binding NoTearoffStyle, RelativeSource={RelativeSource AncestorType=UserControl}}"
            Command="{Binding NoTearoffCommand, RelativeSource={RelativeSource AncestorType=UserControl}}">
            <TextBlock TextAlignment="Center">
                <Run Text="{Binding NoTearoffLine1Text, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                <LineBreak/>
                <Run Text="{Binding NoTearoffLine2Text, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
            </TextBlock>
        </Button>
    </StackPanel>
</UserControl>
